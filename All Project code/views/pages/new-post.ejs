<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>

<main class="container">
  <h1>Create New Post</h1>
  <form action="/posts/add" method="POST">
    <div class="form-group">
      <input type="hidden" class="form-control" id="user" name="user" required value="<%= user.username %>">
    </div>
    <div class="form-group">
      <label for="postTitle">Title</label>
      <input type="text" class="form-control" id="postTitle" name="postTitle" required>
    </div>
    <div class="form-group">
      <label for="postContent">Content</label>
      <textarea class="form-control" id="postContent" name="postContent" rows="3" required></textarea>
    </div>
    <div class="form-group">
      <t>Rating</t> <br>
      <label for="one">⭐</label>
      <input type="radio" name="starRating" id="one" value='1'/>

      <label for="two">⭐⭐</label>
      <input type="radio" name="starRating" id="two" value='2'/>

      <label for="three">⭐⭐⭐</label>
      <input type="radio" name="starRating" id="three" value='3'/>

      <label for="four">⭐⭐⭐⭐</label>
      <input type="radio" name="starRating" id="four" value='4'/>

      <label for="five">⭐⭐⭐⭐⭐</label>
      <input type="radio" name="starRating" id="five" value='5'/>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>

<%- include ('../partials/footer') %>

